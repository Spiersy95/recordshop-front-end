<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable name="album" type="com.northcoders.frontendrecordshop.model.Album"/>
    </data>

    <androidx.cardview.widget.CardView
            android:elevation="20dp"
            android:backgroundTint="@color/material_dynamic_primary80"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            tools:context=".MainActivity">


        <TextView
                android:text="@{album.albumName}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/albumName"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/releaseYear"
                app:layout_constraintTop_toTopOf="@+id/releaseYear"
                android:layout_marginTop="4dp"
                app:layout_constraintHorizontal_bias="0.247"/>
        <TextView
                android:text="@{album.artistName}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/artistName"
                tools:layout_editor_absoluteY="73dp"
                tools:layout_editor_absoluteX="73dp" tools:ignore="MissingConstraints"/>
       <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/releaseYear"
                tools:layout_editor_absoluteY="33dp"
                tools:layout_editor_absoluteX="267dp" tools:ignore="MissingConstraints"/>
        <TextView
                android:text="@{album.genre}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Genre"
                tools:layout_editor_absoluteY="73dp"
                tools:layout_editor_absoluteX="267dp" tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>